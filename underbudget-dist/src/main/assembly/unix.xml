<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd
  "
>
  <id>unix</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <files>
    <!-- Readme -->
    <file>
      <source>src/main/resources/README.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <!-- executable jar -->
    <file>
      <source>../underbudget-jar/target/${project.parent.artifactId}-${project.parent.version}.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>${project.parent.artifactId}.jar</destName>
    </file>
    <!-- install script -->
    <file>
      <source>src/main/resources/unix/Makefile</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <!-- icon -->
    <file>
      <source>src/main/resources/icons/underbudget.png</source>
      <outputDirectory>/data</outputDirectory>
    </file>
    <!-- Linux desktop file -->
    <file>
      <source>src/main/resources/unix/underbudget.desktop</source>
      <outputDirectory>/data</outputDirectory>
    </file>
    <!-- logging properties -->
    <file>
      <source>src/main/resources/unix/logging.properties</source>
      <outputDirectory>/data</outputDirectory>
    </file>
    <!-- start script -->
    <file>
      <source>src/main/resources/unix/underbudget</source>
      <outputDirectory>/scripts</outputDirectory>
    </file>
  </files>
</assembly>
